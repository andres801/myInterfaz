                <Entry Grid.Row="3" Grid.Column="1"
                        Text=""
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="Center" />
                <Button Grid.Row="4" Grid.Column="0"
                        class="btnReturn"
